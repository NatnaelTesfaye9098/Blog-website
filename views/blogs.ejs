<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Website</title>
    <link rel="stylesheet" href="/styles/blogs.css">
</head>
<body>
    <div class="wrapper">
    <%- include("partials/header.ejs")%>
            <%if(locals.arr && arr.length > 0){%>
                <div class="postcontainer">
                    <%arr.forEach((item) =>{%>
                        <div class ="post">
                            <h2><%= item.title %></h2>
                            <p><%= item.post %></p>
                            <div class="buttons">
                                <a href="/edit/<%= item.id%>" class="edit"><button>Edit</button></a>
                                <a href="/remove/<%= item.id%>" class="remove"><button>Remove</button></a>
                            </div>
                        </div>
                    <%})%>
                </div>
        <%}else{%>
            <p>No posts yet! Create One.</p>
        <%}%>
        <div class="container">
            <form action="<% if (editPost) { %>/update/<%= editPost.id %><% } else { %>/submit<% } %>" method="POST">
              <label for="title">Title</label>
              <input type="text" name="title" value="<%= editPost && editPost.title ? editPost.title : '' %>">
          
              <label for="post">Write the post</label>
              <textarea name="post" id="post" rows="5" required><%= editPost && editPost.post ? editPost.post : '' %></textarea>
          
              <input type="submit" value="<%= editPost ? 'Update' : 'Post' %>">
              <input type="hidden" name="postId" value="<%= editPost && editPost.id ? editPost.id : '' %>">
            </form>
          </div>
        </div>
        <!-- <%- include("partials/footer.ejs")%> -->
</body>
</html>